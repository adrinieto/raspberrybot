{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "standard": {
      "format": "%(asctime)s:%(name)s:%(levelname)s: %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "handlers": {
    "console": {
      "level": "DEBUG",
      "formatter": "standard",
      "class": "logging.StreamHandler"
    },
    "file": {
      "level": "DEBUG",
      "formatter": "standard",
      "class": "logging.FileHandler",
      "filename": "bot.log",
      "encoding": "utf8"
    }
  },
  "loggers": {
    "__main__": {
      "handlers": [
        "console",
        "file"
      ],
      "level": "INFO"
    },
    "utils": {
      "handlers": [
        "console",
        "file"
      ],
      "level": "DEBUG"
    }
  }
}